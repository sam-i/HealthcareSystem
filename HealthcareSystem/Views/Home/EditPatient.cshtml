@model HealthcareSystem.ViewModels.EditPatientViewModel

<h2>Edit Patient</h2>

<form asp-action="EditPatient" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name *</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Address *</label>
        <input asp-for="Address" class="form-control" required />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AssignedDoctorId" class="form-label">Assigned Doctor</label>
        <select asp-for="AssignedDoctorId" asp-items="Model.AvailableDoctors" class="form-select">
            <option value="">Select Doctor (Optional)</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="AssignedRadiologistId" class="form-label">Assigned Radiologist</label>
        <select asp-for="AssignedRadiologistId" asp-items="Model.AvailableRadiologists" class="form-select">
            <option value="">Select Radiologist (Optional)</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
</form>